---
import ServiceCard from "@/components/ServiceCard.tsx";
import type { FC } from "react";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

interface Service {
  icon: FC<any>;
  title: string;
  description: string;
}

export interface Props {
  services: Service[];
}

const { services } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="services" class="py-20 bg-background">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
        {t("services.title")}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto mb-6">
        {t("services.description")}
      </p>
      <ul class={`text-lg text-muted-foreground max-w-2xl mx-auto space-y-2 ${lang === 'he' ? 'text-right' : 'text-left'}`}>
        <li class={`flex items-center gap-2 ${lang === 'he' ? 'flex-row-reverse justify-end' : 'flex-row justify-start'}`}>
          <span class="text-primary font-bold flex-shrink-0">•</span>
          {t("services.bullets.one")}
        </li>
        <li class={`flex items-center gap-2 ${lang === 'he' ? 'flex-row-reverse justify-end' : 'flex-row justify-start'}`}>
          <span class="text-primary font-bold flex-shrink-0">•</span>
          {t("services.bullets.two")}
        </li>
        <li class={`flex items-center gap-2 ${lang === 'he' ? 'flex-row-reverse justify-end' : 'flex-row justify-start'}`}>
          <span class="text-primary font-bold flex-shrink-0">•</span>
          {t("services.bullets.three")}
        </li>
      </ul>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
      {
        services.map((service, index) => (
          <ServiceCard {...service} client:visible />
        ))
      }
    </div>
  </div>
</section>
