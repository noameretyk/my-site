---
import { Button } from "@/components/ui/button";
import { Globe, Users, Award, GraduationCap, MessageCircle, CheckCircle } from "lucide-react";
import { Image } from "astro:assets";
import effiePortrait from "@/assets/headshot.jpg";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="py-20 bg-gradient-to-b from-background to-accent">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      <div>
        <Image
          src={effiePortrait}
          alt={t('about.imageAlt')}
          width={400}
          height={600}
          class="rounded-2xl shadow-2xl w-full max-w-md mx-auto"
        />
      </div>
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-6">
          {t('about.title')}
        </h2>
        <p class="text-lg text-muted-foreground mb-6 leading-relaxed">
          {t('about.description')}
        </p>

        <div class="space-y-4 mb-8">
          <div class="flex items-start gap-3">
            <GraduationCap client:load className="w-6 h-6 text-primary mt-1 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-foreground mb-1">{t('about.educated.title')}</h3>
              <p class="text-muted-foreground">
                {t('about.educated.description')}
              </p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <Globe client:load className="w-6 h-6 text-primary mt-1 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-foreground mb-1">{t('about.bilingual.title')}</h3>
              <p class="text-muted-foreground">
                {t('about.bilingual.description')}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <Users client:load className="w-6 h-6 text-primary mt-1 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-foreground mb-1">{t('about.healthcare.title')}</h3>
              <p class="text-muted-foreground">
                {t('about.healthcare.description')}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <Award client:load className="w-6 h-6 text-primary mt-1 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-foreground mb-1">
                {t('about.evidence.title')}
              </h3>
              <p class="text-muted-foreground">
                {t('about.evidence.description')}
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <CheckCircle client:load className="w-6 h-6 text-primary mt-1 flex-shrink-0" />
            <div>
              <h3 class="font-semibold text-foreground mb-1">{t('about.results.title')}</h3>
              <p class="text-muted-foreground">
                {t('about.results.description')}
              </p>
            </div>
          </div>
        </div>

        <Button size="lg" className="gap-2 about-whatsapp-button" client:load>
          <MessageCircle className="w-5 h-5" />
          {t('about.button')}
        </Button>
      </div>
    </div>
  </div>
</section>

<script>
  const aboutWhatsAppButton = document.querySelector(".about-whatsapp-button");
  aboutWhatsAppButton?.addEventListener("click", () => {
    window.open("https://wa.me/972500000000", "_blank");
  });
</script>
